<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>RBAC Demo Application</display-name>
    <description>Role-Based Access Control Demo with JSP</description>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>dashboard</welcome-file>
    </welcome-file-list>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.rbac.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- RBAC Filter -->
    <filter>
        <filter-name>RBACFilter</filter-name>
        <filter-class>com.rbac.filter.RBACFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RBACFilter</filter-name>
        <url-pattern>/employees</url-pattern>
        <url-pattern>/roles</url-pattern>
        <url-pattern>/students</url-pattern>
        <url-pattern>/teachers</url-pattern>
        <url-pattern>/mentors</url-pattern>
        <url-pattern>/subjects</url-pattern>
    </filter-mapping>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.rbac.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.rbac.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>



    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.rbac.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Employee Servlet -->
    <servlet>
        <servlet-name>EmployeeServlet</servlet-name>
        <servlet-class>com.rbac.servlet.EmployeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeeServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>

    <!-- Role Servlet -->
    <servlet>
        <servlet-name>RoleServlet</servlet-name>
        <servlet-class>com.rbac.servlet.RoleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoleServlet</servlet-name>
        <url-pattern>/roles</url-pattern>
    </servlet-mapping>

    <!-- Student Servlet -->
    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>com.rbac.servlet.StudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/students</url-pattern>
    </servlet-mapping>

    <!-- Teacher Servlet -->
    <servlet>
        <servlet-name>TeacherServlet</servlet-name>
        <servlet-class>com.rbac.servlet.TeacherServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeacherServlet</servlet-name>
        <url-pattern>/teachers</url-pattern>
    </servlet-mapping>

    <!-- Mentor Servlet -->
    <servlet>
        <servlet-name>MentorServlet</servlet-name>
        <servlet-class>com.rbac.servlet.MentorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MentorServlet</servlet-name>
        <url-pattern>/mentors</url-pattern>
    </servlet-mapping>

    <!-- Subject Servlet -->
    <servlet>
        <servlet-name>SubjectServlet</servlet-name>
        <servlet-class>com.rbac.servlet.SubjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SubjectServlet</servlet-name>
        <url-pattern>/subjects</url-pattern>
    </servlet-mapping>

    <!-- Error Pages -->
    <error-page>
        <error-code>403</error-code>
        <location>/error/403.jsp</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
</web-app>
